<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_show_iv_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="true">
        <TextView
            android:id="@+id/textView"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal"
            android:text="Name"/>

        <EditText
            android:id="@+id/activity_main_et_name"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal"/>
        <TextView
            android:id="@+id/Gender"
            android:text="Gender"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="fill_horizontal"
            android:paddingTop="10dp" />

        <ToggleButton
            android:id="@+id/activity_main_tb_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="fill_horizontal"
            android:textOff="FeMale"
            android:textOn="Male"
            android:text="New ToggleButton"
            android:checked="false"
            android:paddingTop="10dp" />
        <TextView
            android:id="@+id/activity_main_tv_age"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="fill_horizontal"
            android:text="Age"
            android:paddingTop="10dp" />

        <SeekBar
            android:id="@+id/activity_main_sb_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:max="100"
            android:progress="20"
            android:paddingTop="10dp" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="fill_horizontal"
            android:text="Hobbies"
            android:paddingTop="10dp" />
        <CheckBox
            android:id="@+id/activity_main_chk_game"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:text="Game"
            android:checked="false"/>

        <CheckBox
            android:id="@+id/activity_main_chk_music"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:checked="false" />
        <CheckBox
            android:id="@+id/activity_main_chk_travel"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5"
            android:text="Travel"
            android:checked="false" />

        <CheckBox
            android:id="@+id/activity_main_chk_book"
            android:layout_column="2"
            android:layout_row="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="Book"
            android:checked="false" />
        <TextView
            android:id="@+id/textView5"
            android:text="Country"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="6"/>

        <Spinner
            android:id="@+id/activity_main_spn_country"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_column="1"
            android:layout_row="6"
            android:layout_columnSpan="3" />

        <Button
            android:text="Export data"
            android:id="@+id/activity_main_btn_ok"
            android:layout_column="0"
            android:layout_row="7"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnSpan="4"/>
    </GridLayout>
</LinearLayout>
